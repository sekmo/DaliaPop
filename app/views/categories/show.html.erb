<p id="notice"><%= notice %></p>

<%= link_to 'Back', categories_path %>
<p style="margin-bottom: 0">questions about</p>
<h2><%= @category.name %></h2>

<br>

<% if @questions.any? %>
  <% @questions.each do |question| %>
    <p><%= link_to question.title, question_path(question.id)  %></p>
  <% end %>
<% else %>
  <p>Sadly, no questions found about <%= @category.name %> :(</p>
  <%= link_to "Ask a new question!" , new_question_path, class: "btn btn-primary" %>
<% end %>
