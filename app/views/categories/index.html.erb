<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<div class="row">
<% @categories.each do |category| %>
  <div class="col-sm-4">
    <div class="card category">
      <div class="card-body">
        <h5><%= link_to category.name, category_path(category.id) %> (<%= category.questions.size %>)</h5>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </div>
  </div>
<% end %>
</div>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
